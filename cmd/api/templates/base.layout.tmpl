{{define "base"}}

<!doctype html>
<html lang="de">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    {{ block "title" .}}
    {{ end }}
  </title>
  <link href="../assets/css/main.css" rel="stylesheet">
  <!-- <script src="../assets/js/alert.js" defer></script> -->
  
</head>

<body id="page">
        <div id="top">
            <div class="center-content">
                {{ block "top" .}}{{end}}
            </div>
        </div>
        <header id="pageHeader">
            <div class="center-content">
                {{ block "header" .}}{{end}}
            </div>
        </header>
        <main id="pageContent">
            <div class=" center-content">
                <div class="grid-content">
                    {{ block "content" .}}{{end}}
                </div>
            </div>
        </main>
        <footer id="pageFooter">
            <div class="center-content">
                {{ block "footer" .}}{{end}} 
            </div>
        </footer>  
  <script>
    let createDate = `&copy;OTS - ${new Date().getMonth() + 1} / ${new Date().getFullYear()}`
    const footer = document.querySelector(".footer p")
    footer.innerHTML = createDate
    function saveSelectItem(id, item) {       
       globalPlant = {
        plant_id: id, 
        plant: item
    }
       window.localStorage.setItem('plant', JSON.stringify(globalPlant))      
    }
  </script>  
 {{ block "js" .}}{{end}}
</body>

</html>

{{end}}