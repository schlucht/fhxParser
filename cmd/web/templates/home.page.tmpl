{{template "base" .}}

{{define "content"}}

<div class="container">
  <h1 class="text-center">Start Seite</h1>
  <div class="row">
    <div class="col-10">
      <div class="mb-3">
        <form action="/home-read-file" method="POST" id="uplaod-form">        
          <div class="mb-3">
          <label for="input-file" class="form-label">Default file input example</label>
          <input class="form-control" type="file" id="input-file" accept=".fhx">
          <input type="text" id="text-output">  
        </div>
        <div class="mb-3">    
          <button type="submit" class="btn btn-danger">Speichern</button>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{ end }}
{{ define "js"}}
<script>
  const input = document.getElementById('input-file');
  const inputForm = document.getElementById('uplaod-form');
  input.addEventListener('change', function() {
    var fr = new FileReader();
    fr.onload = function() {
      let output = fr.result;
      document.getElementById('text-output').textContent(output)
      inputForm.submit()
    }
    fr.readAsText(this.files[0]);
  })
</script>
{{ end }}