{
    "editor.fontFamily": "'Fira Code',  Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 0,
    "vim.smartRelativeLine": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
        "before": ["j","j"],
        "after": ["<ESC>"]
        }
    ],   

    "files.exclude": {
        "**/.git": true,
        "**/.gitignore": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/.npmrc": true,
        "**/.nuxt": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.crswap": true,
        "go.mod": true,
        "go.sum": true,
        "**/package*": true,        
        "**/node_modules": true
    },
    "editor.tokenColorCustomizations": {
        "[Visual Studio Light]": {
            "comments": "#058318",
            "functions": "#0077ff",
            "numbers": "#ff9900",
            "strings": "#9b0606",
            "keywords": "#0000ff",
            "types": "#0587af",
            "variables": "#000000",
            "textMateRules": []
        },
        "[Solarized Light]": {
            "comments": "#058318",
            "keywords": "#a50a0a",            
        }       

    },
    "editor.quickSuggestions": {
        "strings": true
      },
    "sqltools.connections": [
        {
            "mysqlOptions": {
                "authProtocol": "default"
            },
            "previewLimit": 50,
            "server": "db8.hostpark.net",
            "port": 3306,
            "driver": "MariaDB",
            "name": "fhxDB",
            "database": "schmidschluch4",
            "username": "schmidschluch4"
        }
    ]
}