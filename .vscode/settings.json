{
    "editor.fontFamily": "Consolas,New Times Roman, Verdana, Calibri light,Courier New, monospace",
    "editor.fontSize": 14,
    "editor.letterSpacing": 0,
    "editor.lineHeight": 0,
    "terminal.integrated.fontFamily": "monospace",
    "editor.stickyScroll.enabled": false,
    "editor.tabSize": 4,

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript, html, css, typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
     

    "vetur.validation.template": false,
    "vetur.validation.script": false,
    "vetur.validation.style": false,
    
    "vim.smartRelativeLine": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
        "before": ["j","j"],
        "after": ["<ESC>"]
        }
    ],   

    "files.exclude": {
        "**/.git": true,
        "**/.gitignore": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/.npmrc": true,
        "**/.nuxt": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.crswap": true,
        "go.mod": true,
        "go.sum": true,
        "**/package*": false,        
        "**/node_modules": true
    },
    "editor.tokenColorCustomizations": {
        "[Visual Studio Light]": {
            "comments": "#058318",
            "functions": "#0077ff",
            "numbers": "#ff9900",
            "strings": "#9b0606",
            "keywords": "#0000ff",
            "types": "#0587af",
            "variables": "#000000",
            "textMateRules": []
        },
        "[Solarized Light]": {
            "comments": "#058318",
            "keywords": "#a50a0a",            
        }       

    },
    "editor.quickSuggestions": {
        "strings": true
      },
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.useTabs": true   
}